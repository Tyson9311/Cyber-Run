{
  "version": 2,
  "builds": [
    { "src": "backend/api/*.js", "use": "@vercel/node" },
    { "src": "frontend/index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/submitScore", "dest": "backend/api/submitScore.js" },
    { "src": "/api/getLeaderboard", "dest": "backend/api/getLeaderboard.js" },
    { "src": "/", "dest": "frontend/index.html" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ]
}
